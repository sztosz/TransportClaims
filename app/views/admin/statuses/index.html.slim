- if policy(@statuses).create?
  .row.col-md-12
    = link_to :new, new_admin_status_path, { class: 'btn btn-primary' }

.row.col-md-12
  table.table.table-striped.table-hover
    thead
      tr
        th ID
        th Name
        - if policy(@statuses).edit?
          th Edit
        - if policy(@statuses).destroy?
          th Remove
    tbody
      - for status in @statuses do
        tr
          td = status.id
          td = status.name
          - if policy(@statuses).edit?
            td = link_to :Edit, edit_admin_status_path(status), class: 'btn btn-primary'
          - if policy(@statuses).destroy?
            td = link_to :Remove, admin_status_path(status), method: :delete, class: 'btn btn-danger'
